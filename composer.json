{
    "name": "kawanamiyuu/htb-feed",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Yuu Kawanami",
            "email": "yuu.kawanami@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4",
        "guzzlehttp/guzzle": "^6.5",
        "laminas/laminas-diactoros": "^2.3",
        "laminas/laminas-feed": "^2.12",
        "laminas/laminas-httphandlerrunner": "^1.2",
        "ray/di": "^2.10",
        "relay/relay": "^2.1",
        "symfony/css-selector": "^5.1",
        "symfony/dom-crawler": "^5.1"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.8",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.2",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Kawanamiyuu\\HtbFeed\\": "src"
        },
        "files": ["src-files/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Kawanamiyuu\\HtbFeed\\": "tests"
        }
    },
    "scripts": {
        "check": ["@lint", "@test"],
        "test": "phpdbg -qrr ./vendor/bin/phpunit --coverage-text",
        "lint": [
            "phpcs --standard=PSR12 src",
            "phpmd src text phpmd.xml",
            "phpstan analyze --no-progress --level=max src"
        ],
        "fmt": "phpcbf --standard=PSR12 src"
    },
    "config": {
        "sort-packages": true
    }
}
