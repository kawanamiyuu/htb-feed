{
    "name": "kawanamiyuu/htb-feed",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Yuu Kawanami",
            "email": "yuu.kawanami@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4",
        "guzzlehttp/guzzle": "^7.4",
        "k9u/enum": "^2.0",
        "k9u/framework": "^0.8",
        "laminas/laminas-diactoros": "^2.10",
        "laminas/laminas-feed": "^2.17",
        "symfony/css-selector": "^5.4",
        "symfony/dom-crawler": "^5.4"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.12",
        "phpstan/phpstan": "^1.6",
        "phpunit/phpunit": "^9.2",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Kawanamiyuu\\HtbFeed\\": "src"
        },
        "files": ["src-files/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Kawanamiyuu\\HtbFeed\\": "tests"
        }
    },
    "scripts": {
        "check": ["@lint", "@test"],
        "test": "phpdbg -qrr ./vendor/bin/phpunit --coverage-text",
        "lint": [
            "phpcs --standard=PSR12 src",
            "phpmd src text phpmd.xml",
            "phpstan analyze --no-progress --level=max src"
        ],
        "fmt": "phpcbf --standard=PSR12 src",
        "serve": [
            "rm -rf build/scripts",
            "php -S localhost:8080 -t public"
        ]
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 0
    }
}
